<div class = "cartimage">
  <p id="notice"><%= notice %></p>

  <p>
    <strong> </strong>
    <img src="<%=@product.image_url %>" width="200" height="200">
  </p>
</div>

<div class = "products">
  <p>
    <strong>Title:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @product.category %>
  </p>


  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
  <% end %>

  <div class="productslinks">
    <p class="addcart"> <a href='/cart/<%= @product.id %>'> ADD TO CART </a> </p>
    <p class="backhome"> <%= link_to 'BACK', products_path %> </p>
  </div>
</div>
