<div class = "image">
  <p id="notice"><%= notice %></p>

  <p>
    <strong> </strong>
    <%= image_tag product.image_url %>  </p>
</div>

<div class = "products">
  <p>
    <strong>Title:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @product.category %>
  </p>

  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
  <% end %>

  <%= link_to 'Back', products_path %>
</div>
