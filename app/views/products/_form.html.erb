    <%= f.file_field :image_url %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
